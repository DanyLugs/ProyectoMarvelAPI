<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_portrait"
    tools:context=".SpiderSelector">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:elevation="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="6dp"
        android:onClick="onClick">

        <ImageView
            android:id="@+id/imgPersonaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />
            <!--android:background="@drawable/spider_man_card2"-->

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/tarjeta"
            android:layout_gravity="bottom"
            android:background="#8c000000"
            android:textColor="#ffe3e3e3"
            android:textSize="30sp" />

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:background="@color/colorWhite"
        android:padding="20dp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="226dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="BotÃ³n de prueba"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="310dp" />

    <TextView
        android:id="@+id/namePersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"
        android:background="@color/colorWhite"
        android:padding="20dp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="226dp" />

    <TextView
        android:id="@+id/descriptionPersonaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@color/colorWhite"
        android:padding="20dp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="226dp" />

</RelativeLayout>